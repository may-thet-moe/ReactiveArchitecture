<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/width_show_case_movie"
    android:layout_height="@dimen/height_show_case_movie"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/margin_medium_2">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivShowCaseMovie"
        android:src="@drawable/passenger"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionName = "@string/transition_game"
        android:scaleType="centerCrop"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvShowCaseMovieDate"
        android:text="@string/lbl_show_case_movie_date"
        android:textColor="@color/colorSecondaryText"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:layout_marginBottom="@dimen/margin_medium_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="@dimen/margin_medium"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvShowCaseMovieName"
        android:text="Passengers"
        android:textStyle="bold"
        android:textSize="@dimen/text_regular_2x"
        android:textColor="@color/white"
        android:layout_alignStart="@id/tvShowCaseMovieDate"
        android:layout_above="@id/tvShowCaseMovieDate"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="@dimen/margin_medium"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnShowCaseMoive"
        android:layout_centerInParent="true"
        android:layout_width="@dimen/margin_xxlarge"
        android:layout_height="@dimen/margin_xxlarge"
        app:icon="@drawable/ic_baseline_play_arrow_black_24dp"
        style="@style/Widget.Material3.Button.Icon"
        app:iconPadding="0dp"
        android:insetBottom="0dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        android:insetTop="0dp"
        app:cornerRadius="@dimen/margin_large"
        android:backgroundTint="@color/colorAccent"
        android:layout_marginBottom="@dimen/margin_xlarge"
        android:elevation="@dimen/margin_medium"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#26000000"
        android:elevation="@dimen/margin_small" />

</RelativeLayout>